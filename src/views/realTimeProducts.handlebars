
<h1>REGISTRAR NUEVO PRODUCTO</h1>
<form class= "styleForm">
    <label for="title">Título:</label>
    <input type="text" id="formTitle" name="title" placeholder="Agregar un titulo al producto" >
    <label for="description">Descripción:</label>
    <textarea id="formDescription" name="description" placeholder="Agregar un descripción al producto"></textarea>
    <label for="category">Categoria:</label>
    <input type="text" id="formCategory" name="category" placeholder="Agregar una categoria al producto">
    <label for="code">Código:</label> 
    <input type="text" id="formCode" name="code" placeholder="Agregar un código al producto">
    <label for="price">Precio:</label>
    <input type="number" id="formPrice" name="price" placeholder="Agregar un precio al producto" >
    <label for="stock">Stock:</label>
    <input type="number" id="formStock" name="stock" placeholder="Agregar stock al producto">
    <label for="thumbnails">Imagen:</label>
    <input type="text" id="thumbnails" name="thumbnails" required>
    <input type="submit" value="Agregar producto">
</form>
<div id="cardContainer" idstyle="text-align: center;">
  {{#each products}}
  <div id={{this.id}}>
  <div style="display: inline-block; margin: 10px; padding: 15px; border: 5px solid blue;">
        <img src="{{this.thumbnails}}" alt="product image {{this.id}}" width="200" height="200">
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <p>Precio: {{this.price}}</p>
        <p>Stock: {{this.stock}}</p>
        <p>Categoria: {{this.category}}</p>
        <p>Id: {{this.id}} </p>
        <button onclick="deleteProduct({{this.id}})">Eliminar</button>
      </div>
  </div>
  {{/each}}
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>